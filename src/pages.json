{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    { "path": "pages/tab/home/home", "style": { "navigationStyle": "custom" } },
    { "path": "pages/tab/category/category", "style": { "navigationBarTitleText": "全部品类" } },
    { "path": "pages/tab/cart/cart", "style": { "navigationBarTitleText": "购物车" } },
    {
      "path": "pages/tab/user/user",
      "style": { "navigationStyle": "custom" },
      "needLogin": true
    }
  ],
  "subPackages": [
    {
      "root": "pages/common",
      "pages": [
        { "path": "product/product", "style": { "navigationBarTitleText": "商品详情" } },
        { "path": "login", "style": { "navigationBarTitleText": "登录" } },
        { "path": "protocol", "style": { "navigationBarTitleText": "服务协议" } },
        { "path": "404", "style": { "navigationBarTitleText": "404" } }
      ]
    }
  ],
  "preloadRule": {
    "pages/tab/home/home": {
      "network": "all",
      "packages": ["pages/common"]
    }
  },
  "tabBar": {
    "color": "#1b233b",
    "selectedColor": "#57bea0",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [{
      "iconPath": "static/images/tabbar/home.png",
      "selectedIconPath": "static/images/tabbar/home_selected.png",
      "pagePath": "pages/tab/home/home",
      "text": "首页"
    }, {
      "iconPath": "static/images/tabbar/category.png",
      "selectedIconPath": "static/images/tabbar/category_selected.png",
      "pagePath": "pages/tab/category/category",
      "text": "品类"
    }, {
      "iconPath": "static/images/tabbar/cart.png",
      "selectedIconPath": "static/images/tabbar/cart_selected.png",
      "pagePath": "pages/tab/cart/cart",
      "text": "购物车"
    }, {
      "iconPath": "static/images/tabbar/my.png",
      "selectedIconPath": "static/images/tabbar/my_selected.png",
      "pagePath": "pages/tab/user/user",
      "text": "我的"
    }]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
